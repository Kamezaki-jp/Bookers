<h1>Editing Book</h1>

<!-- error message-->
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <h4>Errors:</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- form -->
<%= form_with model:@book, local: true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book'%>
  <%= link_to 'Show', book_path(@book.id) %>
  <p>|</p>
  <%= link_to 'Back', books_path %>
<% end %>
